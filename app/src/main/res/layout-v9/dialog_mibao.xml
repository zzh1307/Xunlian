<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
android:orientation="vertical"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/mibao_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置密保问题"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="#3399ff"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/mibao_info"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:text="您可以预留与自身经历相关的问题和答案，当您忘记密码时,可以用此问题来重新设置您的密码."
        android:textSize="15dp"
        android:gravity="center"
        android:layout_margin="10dp"
        />

    <EditText
        android:layout_margin="10dp"
        android:layout_width="300dp"
        android:maxLength="6"
        android:layout_height="wrap_content"
        android:id="@+id/mibao_edt_wenti"
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="请输入密保问题"
        android:inputType="text"
        />
    <EditText
        android:layout_margin="10dp"
        android:layout_width="300dp"
        android:maxLength="6"
        android:layout_height="wrap_content"
        android:id="@+id/mibao_edt_daan"
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="请输入密保答案"
        android:inputType="text"
        />
    <Button
        android:id="@+id/dialog_btn"
        android:layout_marginTop="20dp"
        android:text="下一步"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"/>


</LinearLayout>
